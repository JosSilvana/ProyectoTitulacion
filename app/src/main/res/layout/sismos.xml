<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ltvHoraLocal1"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Hora Local:"
        android:textColor="#5DADE2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ltvHoraLocal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ltvHoraLocal1" />

    <TextView
        android:id="@+id/ltvMagnitud1"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:text="Magnitud:"
        android:textColor="#5DADE2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ltvMagnitud"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ltvMagnitud1"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/ltvCiudadCercana1"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="40dp"
        android:text="Ciudad mas cercerna:"
        android:textColor="#5DADE2"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/ltvCiudadCercana"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ltvCiudadCercana1"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/ltvProfundidad1"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="40dp"
        android:text="Profundidad:"
        android:textColor="#5DADE2"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/ltvProfundidad"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ltvProfundidad1"
        android:layout_marginTop="110dp"
        />
</RelativeLayout>